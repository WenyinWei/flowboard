{
  "name": "flowboard",
  "version": "1.0.0",
  "description": "A flexible, cross-platform dashboard for creating and managing data processing workflows with support for Python, Julia, and more.",
  "main": "index.cjs",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run start:backend\" \"npm run start:electron\"",
    "start:electron": "electron index.cjs",
    "start:backend": "node src/backend/server.js",
    "serve": "concurrently \"npm run serve:vue\" \"npm run serve:backend\"",
    "serve:vue": "vue-cli-service serve",
    "serve:backend": "nodemon src/backend/server.js",
    "build": "vue-cli-service build",
    "build:electron": "electron-builder",
    "docs": "echo \"Documentation is available in the docs/ directory\"",
    "docs:serve": "cd docs && python -m http.server 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WenyinWei/flowboard.git"
  },
  "keywords": [
    "dataflow",
    "workflow",
    "dashboard",
    "vue",
    "electron",
    "python",
    "julia"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WenyinWei/flowboard/issues"
  },
  "homepage": "https://github.com/WenyinWei/flowboard#readme",
  "devDependencies": {
    "@vue/cli-service": "^5.0.8",
    "concurrently": "^8.2.0",
    "electron": "^37.2.6",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "chart.js": "^4.4.4",
    "d3": "^7.9.0",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "element-plus": "^2.8.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "python-shell": "^5.0.0",
    "vue": "^3.5.12"
  }
}
